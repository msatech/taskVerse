
datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id               String                @id @default(cuid())
  name             String
  email            String                @unique
  hashedPassword   String
  avatarUrl        String?
  createdAt        DateTime              @default(now())
  updatedAt        DateTime              @updatedAt
  organizations    OrganizationMember[]
  leadedProjects   Project[]             @relation("ProjectLead")
  reportedIssues   Issue[]               @relation("Reporter")
  assignedIssues   Issue[]               @relation("Assignee")
  comments         Comment[]
  activityLogs     ActivityLog[]
  role             String?               @default("USER")
}

model Organization {
  id          String               @id @default(cuid())
  name        String
  slug        String               @unique
  ownerId     String
  owner       User                 @relation(fields: [ownerId], references: [id], onDelete: Cascade)
  createdAt   DateTime             @default(now())
  updatedAt   DateTime             @updatedAt
  members     OrganizationMember[]
  projects    Project[]
  invitations Invitation[]
  activityLogs ActivityLog[]

  @@index([ownerId])
}

model OrganizationMember {
  id             String       @id @default(cuid())
  organizationId String
  organization   Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  userId         String
  user           User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  role           String // e.g., 'OWNER', 'ADMIN', 'MEMBER'
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt

  @@unique([organizationId, userId])
  @@index([userId])
}

model Project {
  id             String       @id @default(cuid())
  name           String
  key            String
  type           String // 'KANBAN' or 'SCRUM'
  organizationId String
  organization   Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  leadId         String
  lead           User         @relation("ProjectLead", fields: [leadId], references: [id])
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt
  statuses       Status[]
  issues         Issue[]
  sprints        Sprint[]

  @@unique([organizationId, key])
  @@index([leadId])
}

model Status {
  id        String  @id @default(cuid())
  name      String
  category  String // 'TODO', 'IN_PROGRESS', 'DONE'
  order     Int
  projectId String
  project   Project @relation(fields: [projectId], references: [id], onDelete: Cascade)
  issues    Issue[]

  @@index([projectId])
}

model Issue {
  id           String        @id @default(cuid())
  key          String
  title        String
  description  String?
  type         String        @default("TASK") // 'STORY', 'TASK', 'BUG', 'EPIC'
  priority     String        @default("MEDIUM") // 'NONE', 'LOW', 'MEDIUM', 'HIGH', 'CRITICAL'
  statusId     String
  status       Status        @relation(fields: [statusId], references: [id])
  projectId    String
  project      Project       @relation(fields: [projectId], references: [id], onDelete: Cascade)
  reporterId   String
  reporter     User          @relation("Reporter", fields: [reporterId], references: [id])
  assigneeId   String?
  assignee     User?         @relation("Assignee", fields: [assigneeId], references: [id])
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  dueDate      DateTime?
  comments     Comment[]
  sprints      IssueSprint[]
  activityLogs ActivityLog[]

  @@unique([projectId, key])
  @@index([statusId])
  @@index([reporterId])
  @@index([assigneeId])
}

model Comment {
  id        String   @id @default(cuid())
  body      String
  authorId  String
  author    User     @relation(fields: [authorId], references: [id])
  issueId   String
  issue     Issue    @relation(fields: [issueId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([authorId])
  @@index([issueId])
}

model Sprint {
  id         String        @id @default(cuid())
  name       String
  status     String // 'UPCOMING', 'ACTIVE', 'COMPLETED'
  startDate  DateTime?
  endDate    DateTime?
  goal       String?
  projectId  String
  project    Project       @relation(fields: [projectId], references: [id], onDelete: Cascade)
  issues     IssueSprint[]
  createdAt  DateTime      @default(now())
  updatedAt  DateTime      @updatedAt

  @@index([projectId])
}

model IssueSprint {
  id        String @id @default(cuid())
  issueId   String
  issue     Issue  @relation(fields: [issueId], references: [id], onDelete: Cascade)
  sprintId  String
  sprint    Sprint @relation(fields: [sprintId], references: [id], onDelete: Cascade)
  addedAt   DateTime @default(now())

  @@unique([issueId, sprintId])
  @@index([sprintId])
}

model ActivityLog {
  id              String        @id @default(cuid())
  organizationId  String
  organization    Organization  @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  issueId         String?
  issue           Issue?        @relation(fields: [issueId], references: [id])
  actorId         String
  actor           User          @relation(fields: [actorId], references: [id])
  type            String
  message         String
  metadata        Json?
  createdAt       DateTime      @default(now())

  @@index([organizationId])
  @@index([issueId])
  @@index([actorId])
}

model Invitation {
  id             String       @id @default(cuid())
  email          String
  organizationId String
  organization   Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  token          String       @unique
  expires        DateTime
  createdAt      DateTime     @default(now())

  @@index([email])
  @@index([organizationId])
}
