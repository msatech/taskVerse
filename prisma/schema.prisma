
datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id                 String               @id @default(cuid())
  name               String
  email              String               @unique
  hashedPassword     String
  avatarUrl          String?
  role               String               @default("USER")
  createdAt          DateTime             @default(now())
  updatedAt          DateTime             @updatedAt
  
  assignedIssues     Issue[]              @relation("assignedIssues")
  reportedIssues     Issue[]              @relation("reportedIssues")
  comments           Comment[]
  ownedOrganizations Organization[]       @relation("ownedOrganizations")
  organizations      OrganizationMember[]
  ledProjects        Project[]            @relation("ledProjects")
  activityLogs       ActivityLog[]
  notifications      Notification[]
}

model Organization {
  id          String               @id @default(cuid())
  name        String
  slug        String               @unique
  avatarUrl   String?
  ownerId     String
  owner       User                 @relation("ownedOrganizations", fields: [ownerId], references: [id], onDelete: Cascade)
  createdAt   DateTime             @default(now())
  updatedAt   DateTime             @updatedAt
  
  projects    Project[]
  members     OrganizationMember[]
  invitations Invitation[]
  activityLogs ActivityLog[]
}

model OrganizationMember {
  id              String       @id @default(cuid())
  organizationId  String
  organization    Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  userId          String
  user            User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  role            String       @default("MEMBER") // e.g., OWNER, ADMIN, MEMBER
  createdAt       DateTime     @default(now())
  updatedAt       DateTime     @updatedAt

  @@unique([organizationId, userId])
}

model Project {
  id             String    @id @default(cuid())
  name           String
  key            String
  type           String // SCRUM or KANBAN
  organizationId String
  organization   Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  leadId         String
  lead           User         @relation("ledProjects", fields: [leadId], references: [id])
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt
  
  statuses Status[]
  issues   Issue[]
  sprints  Sprint[]

  @@unique([organizationId, key])
}

model Status {
  id        String  @id @default(cuid())
  name      String
  category  String // e.g., TODO, IN_PROGRESS, DONE
  order     Int
  projectId String
  project   Project @relation(fields: [projectId], references: [id], onDelete: Cascade)
  
  issues    Issue[]
}

model Issue {
  id          String   @id @default(cuid())
  key         String
  title       String
  description String?
  type        String   @default("TASK") // e.g., STORY, TASK, BUG, EPIC
  priority    String   @default("MEDIUM") // e.g., NONE, LOW, MEDIUM, HIGH, CRITICAL
  dueDate     DateTime?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  projectId    String
  project      Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  statusId     String
  status       Status   @relation(fields: [statusId], references: [id])
  reporterId   String
  reporter     User     @relation("reportedIssues", fields: [reporterId], references: [id])
  assigneeId   String?
  assignee     User?    @relation("assignedIssues", fields: [assigneeId], references: [id])

  comments     Comment[]
  sprints      IssueSprint[]
  activityLogs ActivityLog[]

  @@unique([projectId, key])
}

model Comment {
  id        String   @id @default(cuid())
  body      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  authorId  String
  author    User     @relation(fields: [authorId], references: [id], onDelete: Cascade)
  issueId   String
  issue     Issue    @relation(fields: [issueId], references: [id], onDelete: Cascade)
}

model Sprint {
    id          String @id @default(cuid())
    name        String
    status      String // e.g., PENDING, ACTIVE, COMPLETED
    goal        String?
    startDate   DateTime?
    endDate     DateTime?
    projectId   String
    project     Project @relation(fields: [projectId], references: [id], onDelete: Cascade)

    issues      IssueSprint[]
}

model IssueSprint {
    id          String @id @default(cuid())
    issueId     String
    issue       Issue  @relation(fields: [issueId], references: [id], onDelete: Cascade)
    sprintId    String
    sprint      Sprint @relation(fields: [sprintId], references: [id], onDelete: Cascade)

    @@unique([issueId, sprintId])
}

model ActivityLog {
  id             String    @id @default(cuid())
  organizationId String
  organization   Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  issueId        String?
  issue          Issue?    @relation(fields: [issueId], references: [id], onDelete: Cascade)
  actorId        String
  actor          User      @relation(fields: [actorId], references: [id], onDelete: Cascade)
  type           String
  message        String
  metadata       String?
  createdAt      DateTime  @default(now())
}

model Invitation {
    id              String       @id @default(cuid())
    email           String
    token           String       @unique
    expires         DateTime
    organizationId  String
    organization    Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
    createdAt       DateTime     @default(now())

    @@unique([email, organizationId])
}

model Notification {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  type      String   // e.g., MENTION, ASSIGNMENT
  message   String
  url       String   // URL to navigate to on click
  read      Boolean  @default(false)
  createdAt DateTime @default(now())
}
