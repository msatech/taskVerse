// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id               String                @id @default(cuid())
  name             String
  email            String                @unique
  avatarUrl        String?
  hashedPassword   String
  role             String                @default("USER")
  createdAt        DateTime              @default(now())
  updatedAt        DateTime              @updatedAt
  
  organizations    OrganizationMember[]
  ownedOrganizations Organization[]      @relation("OrganizationOwner")
  reportedIssues   Issue[]               @relation("Reporter")
  assignedIssues   Issue[]               @relation("Assignee")
  comments         Comment[]
  activityLogs     ActivityLog[]
}

model Organization {
  id          String               @id @default(cuid())
  name        String
  slug        String               @unique
  ownerId     String
  owner       User                 @relation("OrganizationOwner", fields: [ownerId], references: [id], onDelete: Cascade)
  createdAt   DateTime             @default(now())
  updatedAt   DateTime             @updatedAt
  
  members     OrganizationMember[]
  projects    Project[]
  invitations Invitation[]
  activityLogs ActivityLog[]
}

model OrganizationMember {
  id             String       @id @default(cuid())
  organizationId String
  organization   Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  userId         String
  user           User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  role           String       @default("MEMBER") // e.g., OWNER, ADMIN, MEMBER
  createdAt      DateTime     @default(now())

  @@unique([organizationId, userId])
}

model Project {
  id             String       @id @default(cuid())
  name           String
  key            String       // e.g., "PROJ"
  type           String       // "KANBAN" or "SCRUM"
  organizationId String
  organization   Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  leadId         String
  lead           User         @relation(fields: [leadId], references: [id])
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt

  statuses Status[]
  sprints  Sprint[]
  issues   Issue[]

  @@unique([organizationId, key])
}

model Status {
  id        String   @id @default(cuid())
  name      String
  category  String   // "TODO", "IN_PROGRESS", "DONE"
  order     Int
  projectId String
  project   Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  issues    Issue[]
  
  @@unique([projectId, name])
}

model Sprint {
  id        String   @id @default(cuid())
  name      String
  status    String   // e.g., PLANNED, ACTIVE, COMPLETED
  goal      String?
  startDate DateTime?
  endDate   DateTime?
  projectId String
  project   Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  issues    IssueSprint[]
}

model Issue {
  id           String        @id @default(cuid())
  key          String        // e.g., "PROJ-123"
  title        String
  description  String?
  type         String        // "STORY", "TASK", "BUG", "EPIC"
  priority     String        // "NONE", "LOW", "MEDIUM", "HIGH", "CRITICAL"
  statusId     String
  status       Status        @relation(fields: [statusId], references: [id])
  projectId    String
  project      Project       @relation(fields: [projectId], references: [id], onDelete: Cascade)
  reporterId   String
  reporter     User          @relation("Reporter", fields: [reporterId], references: [id])
  assigneeId   String?
  assignee     User?         @relation("Assignee", fields: [assigneeId], references: [id])
  parentId     String?
  parent       Issue?        @relation("IssueSubtasks", fields: [parentId], references: [id])
  subtasks     Issue[]       @relation("IssueSubtasks")
  dueDate      DateTime?
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  
  comments     Comment[]
  sprints      IssueSprint[]
  activityLogs ActivityLog[]

  @@unique([projectId, key])
}

model Comment {
  id        String   @id @default(cuid())
  body      String
  authorId  String
  author    User     @relation(fields: [authorId], references: [id], onDelete: Cascade)
  issueId   String
  issue     Issue    @relation(fields: [issueId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model IssueSprint {
    issueId String
    issue Issue @relation(fields: [issueId], references: [id], onDelete: Cascade)
    sprintId String
    sprint Sprint @relation(fields: [sprintId], references: [id], onDelete: Cascade)
    addedAt DateTime @default(now())

    @@id([issueId, sprintId])
}

model ActivityLog {
  id             String   @id @default(cuid())
  organizationId String
  organization   Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  issueId        String?
  issue          Issue?   @relation(fields: [issueId], references: [id], onDelete: Cascade)
  actorId        String
  actor          User     @relation(fields: [actorId], references: [id], onDelete: Cascade)
  type           String
  message        String
  metadata       String?
  createdAt      DateTime @default(now())
}

model Invitation {
  id             String       @id @default(cuid())
  email          String
  organizationId String
  organization   Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  token          String       @unique
  expires        DateTime
  createdAt      DateTime     @default(now())
  
  @@unique([email, organizationId])
}
